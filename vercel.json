{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
            "distDir": "build"
            }
        },
        {
            "src": "api-server/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api-server/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}
